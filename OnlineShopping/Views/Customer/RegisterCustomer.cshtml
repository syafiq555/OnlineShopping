
@{
    ViewBag.Title = "RegisterCustomer";
}

<h2>Register Customer</h2>

@using (Html.BeginForm("CustomerProfile","Customer"))
{
    <div class="form-group">
        @Html.Label("Name:");
        @Html.TextBox("name", null, new { placeholder = "Enter name" });<br />
    </div>

    @Html.Label("password:");
    @Html.TextBox("pass", null, new { placeholder = "Insert your password...", type="password" }); <br />

    <button type="submit">Register</button>
}

